NODE_ENV=development
PORT=3000

# Database (MySQL)
DB_DIALECT=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=nutrigpt
DB_USER=root
DB_PASSWORD=changeme

# JWT
JWT_ACCESS_SECRET=replace-with-strong-secret-32chars-min
JWT_REFRESH_SECRET=replace-with-strong-refresh-32chars-min
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Security
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# Storage
STORAGE_DRIVER=local
STORAGE_LOCAL_DIR=uploads

# Gemini (placeholder)
GEMINI_API_KEY=

# Database timezone (controls how Sequelize writes dates)
# Examples: 'Z' (UTC), '-03:00' (Bras√≠lia)
DB_TZ=-03:00

